<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">


    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Click to Fill Form"
        android:layout_marginTop="600dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/cantora_one"
        android:text="Seek Help"
        android:textColor="@color/black"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Due to the lack of clarity and enforcement, transpersons are subjected to harassment and public scrutiny even at places such as health clinic and government offices."
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LET'em GLIDE makes sure that each individual that seeks our support gets it. We provide the necessary information regarding their legal rights, resources, and even in-person assistance where project officers, who are also from the trans community, accompany individuals to their appointments."
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="190dp"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/picshelp"
        android:layout_marginTop="330dp"/>
</RelativeLayout>